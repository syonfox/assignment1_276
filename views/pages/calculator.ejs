            <tr class="activity">
                <td >
                    <input class='name' value="Activity 1" placeholder="My Activity" >
                    <br>
                    <button class="a_button">DELETE</button>
                    <button class="a_button">DUPLICATE</button>
                </td>
                <td><input class='name' STYLE="width: 90px" value="A1" placeholder="A" ></td>
