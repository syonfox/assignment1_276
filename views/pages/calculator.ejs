            </tr>
            <tr class="activity">
                <td>
                    <input class='name' value="Activity 2" placeholder="My Activity" >
                    <br>
                    <button class="a_button">DELETE</button>
                    <button class="a_button">DUPLICATE</button>
                </td>
                <td><input class='name' STYLE="width: 90px" value="A2" placeholder="A" ></td>
                <td><input class='weight_input' ></td>
                <td><input class='grade_input' >/ <br> <input class='grade_input'></td>
                <td><span class='percent' >&nbsp;</span></td>
            </tr>
            <tr class="activity">
                <td>
                    <input class='name' value="Activity 3" placeholder="My Activity" >
                    <br>
                    <button class="a_button">DELETE</button>
                    <button class="a_button">DUPLICATE</button>
                </td>
                <td><input class='name' STYLE="width: 90px" value="A3" placeholder="A" ></td>
                <td><input class='weight_input' ></td>
                <td><input class='grade_input' >/ <br> <input class='grade_input'></td>
                <td><span class='percent' >&nbsp;</span></td>
            </tr>
            <tr class="activity">
                <td>
                    <input class='name' value="Activity 4" placeholder="My Activity" >
                    <br>
                    <button class="a_button">DELETE</button>
                    <button class="a_button">DUPLICATE</button>
                </td>
                <td><input class='name' STYLE="width: 90px" value="A4" placeholder="A" ></td>
                <td><input class='weight_input' ></td>
                <td><input class='grade_input' >/ <br> <input class='grade_input'></td>
                <td><span class='percent' >&nbsp;</span></td>
            </tr>
            </tbody>
        </table>

